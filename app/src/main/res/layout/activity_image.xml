<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:background="#2E2E2E"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:ignore="NamespaceTypo">

    <!--    <androidx.viewpager.widget.ViewPager-->
    <!--        android:id="@+id/viewPager"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent" />-->
    <ImageView
    android:id="@+id/imgFullSize1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="imageTransition" />


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        fab:fab_addButtonColorNormal="@color/colorRed"
        fab:fab_addButtonColorPressed="@color/colorRed"
        fab:fab_addButtonPlusIconColor="@color/colorWhite"
        fab:fab_labelStyle="@style/customFab">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_action5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fabSize="normal"
            fab:fab_colorNormal="@color/colorRed"
            fab:fab_colorPressed="@color/colorRed"
            fab:fab_icon="@drawable/ic_baseline_wallpaper_24"
            fab:fab_title="Set Wallpaper" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_action4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fabSize="normal"
            fab:fab_colorNormal="@color/colorRed"
            fab:fab_colorPressed="@color/colorRed"
            fab:fab_icon="@drawable/ic_baseline_details_24"
            fab:fab_title="Detail" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_action1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fabSize="normal"
            fab:fab_colorNormal="@color/colorRed"
            fab:fab_colorPressed="@color/colorRed"
            fab:fab_icon="@drawable/ic_file_download_black_24dp"
            fab:fab_title="High Quality" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_action2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fabSize="normal"
            fab:fab_colorNormal="@color/colorRed"
            fab:fab_colorPressed="@color/colorRed"
            fab:fab_icon="@drawable/ic_file_download_black_24dp"
            fab:fab_title="Medium Quality" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_action3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fabSize="normal"
            fab:fab_colorNormal="@color/colorRed"
            fab:fab_colorPressed="@color/colorRed"
            fab:fab_icon="@drawable/ic_file_download_black_24dp"
            fab:fab_title="Low Quality" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</RelativeLayout>